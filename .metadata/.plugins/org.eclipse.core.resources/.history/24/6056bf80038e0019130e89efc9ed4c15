package Forgosh_Ryan;
import java.util.ArrayList;
public class Excersises 
{
	public static int threeAndFive()
	{
		int three = 3;
		int five = 5;
		int sum = 0;
		while(three <= 1000)
		{
			if ((three/5) + 3 != 0)
			three +=3;
			else three +=6;
		}
		while (five <= 1000)
		{
			if ((five/3) + 5 != 0)
			five +=5;
			else five +=10;
		}
		sum = three + five;
		return sum;
	}
	
