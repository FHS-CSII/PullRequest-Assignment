package wang_jason;

import java.util.ArrayList;

/**@author Jason Wang
 * **/
public class Exercises {
	public int threeAndFive(){
		int sum = 0;
		for (int i = 0; i < 1000; i++){
			if (i % 3 == 0 || i % 5 == 0){
				sum = sum + i;
			}
		}
		
		return sum;
	}
	
	public static int evenFibSum(){
		ArrayList<Integer> sequence = new ArrayList<Integer>();
		
		sequence.add(1);
		sequence.add(1);
		int sum = 0;
		
		while (sequence.get(sequence.size() - 1) < 400000){
			sequence.add(sequence.get(sequence.size() - 1) + sequence.get(sequence.size() - 2));
			if (sequence.get(sequence.size() - 1) % 2 == 0){
				sum = sum + sequence.get(sequence.size() - 1);
			}
		}
		
		return sum;
	}
	
	public static void main(String[] args){
		System.out.println(evenFibSum());
	}
}
